{
  "name": "@xerox/jest-package-audit",
  "version": "1.0.4",
  "description": "Filter and retry yarn/npm audit command with Jest.",
  "main": "build/index.js",
  "repository": "git@github.com:xeroxinteractive/jest-package-audit.git",
  "author": "Andrew Leedham <andrew.leedham@xerox.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn run build:types && yarn run build:js",
    "build:types": "tsc --project ./tsconfig.declarations.json",
    "build:js": "babel ./source/ --out-dir ./build/ --extensions .ts --source-maps inline --ignore **/__tests__/**/*.ts,**/__mocks__/**/*.ts",
    "build:clean": "rm -rf ./build",
    "test": "jest",
    "lint": "eslint ./source/ --ext .ts",
    "type-check": "tsc --noEmit",
    "format": "yarn run lint --fix",
    "deploy": "semantic-release",
    "prepublishOnly": "yarn run build"
  },
  "browserslist": [
    "current node"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "prettier": "@xerox/prettier-config",
  "eslintConfig": {
    "extends": [
      "@xerox",
      "@xerox/eslint-config/typescript"
    ]
  },
  "release": {
    "extends": "@xerox/semantic-release-config/npm"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "testRunner": "jest-circus/runner"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/cross-spawn": "^6.0.0",
    "@types/jest": "^24.0.9",
    "@types/node": "^12.0.8",
    "@xerox/eslint-config": "^1.6.1",
    "@xerox/prettier-config": "^1.0.0",
    "@xerox/semantic-release-config": "^1.3.0",
    "babel-jest": "^24.1.0",
    "eslint": "^6.0.1",
    "husky": "^3.0.0",
    "jest": "^24.1.0",
    "jest-circus": "^24.8.0",
    "mock-spawn": "^0.2.6",
    "prettier": "^1.16.4",
    "semantic-release": "^15.13.3",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "cross-spawn": "^7.0.0",
    "pkg-dir": "^4.1.0"
  },
  "resolutions": {
    "tar": ">=4.4.2",
    "fstream": ">=1.0.12",
    "lodash": ">=4.17.12",
    "mixin-deep": ">=1.3.2",
    "set-value": ">=2.0.1",
    "handlebars": ">=4.4.5",
    "https-proxy-agent": ">=3.0.0"
  }
}
