{
  "name": "jest-package-audit",
  "version": "1.0.4",
  "description": "Filter and retry yarn/npm audit command with Jest.",
  "main": "build/index.js",
  "repository": "git@github.com:xeroxinteractive/jest-package-audit.git",
  "author": "Andrew Leedham &lt;Andrew.Leedham2@Outlook.com&gt;",
  "license": "MIT",
  "scripts": {
    "build": "yarn run build:types && yarn run build:js",
    "build:types": "tsc --project ./tsconfig.declarations.json",
    "build:js": "babel ./source/ --out-dir ./build/ --extensions .ts --source-maps inline --ignore **/__tests__/**/*.ts,**/__mocks__/**/*.ts",
    "build:clean": "rm -rf ./build",
    "test": "jest",
    "lint": "eslint ./source/ --ext .ts",
    "type-check": "tsc --noEmit",
    "format": "yarn run lint --fix",
    "deploy": "semantic-release",
    "prepublishOnly": "yarn run build"
  },
  "browserslist": [
    "current node"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "extends": [
      "xerox",
      "xerox/typescript"
    ]
  },
  "release": {
    "extends": "semantic-release-config-xerox/npm"
  },
  "jest": {
    "testRunner": "jest-circus/runner"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/cross-spawn": "^6.0.0",
    "@types/jest": "^24.0.9",
    "@types/node": "^12.0.8",
    "babel-jest": "^24.1.0",
    "eslint": "5.12.1",
    "eslint-config-xerox": "^1.3.1",
    "husky": "^2.4.1",
    "jest": "^24.1.0",
    "jest-circus": "^24.8.0",
    "mock-spawn": "^0.2.6",
    "prettier": "^1.16.4",
    "semantic-release": "^15.13.3",
    "semantic-release-config-xerox": "^1.0.1",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "cross-spawn": "^6.0.5",
    "pkg-dir": "^4.1.0"
  },
  "resolutions": {
    "tar": ">=4.4.2",
    "fstream": ">=1.0.12"
  }
}
